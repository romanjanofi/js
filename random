var Phrases = ['to study some more JS', 'to take a little break', 'to make a cup of coffe', 'to train memory'];
var Day = ['today', 'tomorrow', 'the day after tomorrow'];
var Advise = ["don't want", 'would better'];
var randomDay = Day[Math.floor(Math.random() * 3)];
var randomAdvise = Advise[Math.floor(Math.random() * 2)];
var randomPhrases = Phrases[Math.floor(Math.random() * 4)];
var anAdvise = ['You', randomAdvise, randomPhrases, randomDay + "!!!"].join(" ");
console.log(anAdvise)